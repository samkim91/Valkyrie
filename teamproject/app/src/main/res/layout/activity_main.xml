<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/writeConsent"
        android:text="동의서 작성"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/readAgreement"
        android:layout_marginBottom="30dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:background="@color/lightCyan"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/checkDoc"
        android:text="의사 조회"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/lavender"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/readAgreement"
        android:text="의료문서 조회"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/checkDoc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/lightYellow"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/reportDoctor"
        android:text="의료사고 의사 신고"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/checkDoc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/lightSalmon"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/checkQRCode"
        android:text="QR코드 확인"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/reportDoctor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/lightCyan"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>