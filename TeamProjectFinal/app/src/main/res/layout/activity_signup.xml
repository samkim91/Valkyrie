<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignupActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/nodes"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeId"
        android:ems="10"
        android:hint="아이디"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="70dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkDuplicate"
        android:text="중복확인"
        app:layout_constraintTop_toTopOf="@id/typeId"
        app:layout_constraintLeft_toRightOf="@id/typeId"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typePwd"
        android:ems="10"
        android:hint="패스워드"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/typeId"
        app:layout_constraintLeft_toLeftOf="@id/typeId"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typePwdAgain"
        android:ems="10"
        android:hint="패스워드 확인"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/typePwd"
        app:layout_constraintLeft_toLeftOf="@id/typeId"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeName"
        android:ems="10"
        android:hint="이름"
        app:layout_constraintTop_toBottomOf="@id/typePwdAgain"
        app:layout_constraintLeft_toLeftOf="@id/typeId"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupBtn"
        android:text="회원가입"
        app:layout_constraintTop_toBottomOf="@id/typeName"
        app:layout_constraintRight_toRightOf="@id/typeName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>